@model ProjetoEscola.Models.tbProfessor

@{
    ViewBag.Title = "Adicionar Professor";
}
<script>

    function validar() {
        if (document.getElementById("nmProfessor").value == "" || document.getElementById("nmMateria").value == "") {
            document.getElementById("divSumarioValidacao").style.display = "block";
            $(window).scrollTop(0);
            event.preventDefault();
            return true
        }
        document.getElementById("divSumarioValidacao").style.display = "none";
    }

    // Oculta mensagem
    $(function () {
        $("#nmProfessor").keypress(function () {
            $("#divSumarioValidacao").hide();
        });
    });

    $(function () {
        $("#nmProfessor").change(function () {
            $("#divSumarioValidacao").hide();
        });
    });

</script>

<div>
    <a href="@Url.Action("Index", "Home")" class="btn btn-sm btn-warning pull-right" style="margin-top:30px">
        Página Inicial
    </a>
</div>
<div class="panel-body">
    <div class="container-fluid">
        <h2>Adicionar Professor</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


        <div class="form-horizontal">
            <div class="alert alert-danger" role="alert" id="divSumarioValidacao" style="display:none">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <b>Atenção!</b> Preencha todos os campos.
            </div>
            <hr />
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    <label for="nmProfessor" class="control-label">Nome</label>
                    @Html.EditorFor(model => model.nmProfessor, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label for="nmMateria" class="control-label">Matéria</label>
                    @Html.EditorFor(model => model.nmMateria, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" onclick="validar()"/>
                </div>
            </div>
        </div>

        }


    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
